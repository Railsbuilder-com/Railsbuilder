<!DOCTYPE html>
<html>
<head>
  <title><%= @page.title || @page.name %></title>
  <meta name="description" content="<%= @page.meta_description %>">
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
  <div class="max-w-4xl mx-auto">
    <% @components.each do |page_component| %>
      <div style="<%= inline_styles(page_component.styles) %>">
        <%= render "page_components/#{page_component.component.component_type}", 
                   page_component: page_component %>
      </div>
    <% end %>
  </div>
</body>
</html>
