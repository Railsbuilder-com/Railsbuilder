<%= render 'shared/component_wrapper', component: component do %>
  <% if component["content"].present? %>
    <img src="<%= component["content"] %>" alt="Uploaded image" class="w-full h-auto rounded-xl shadow-lg">
  <% else %>
    <div class="bg-gradient-to-br from-slate-100 to-slate-200 border-2 border-dashed border-slate-300 rounded-xl p-12 text-center">
      <svg class="w-16 h-16 mx-auto mb-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
      </svg>
      <p class="text-slate-600 font-medium">Click to upload an image</p>
    </div>
  <% end %>
<% end %>
