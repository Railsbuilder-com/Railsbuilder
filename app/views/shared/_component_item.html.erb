<div class="component-item group bg-gradient-to-r from-<%= color %>-50 to-<%= color %>-100 hover:from-<%= color %>-100 hover:to-<%= color %>-200 border border-<%= color %>-200 rounded-xl p-4 cursor-move transition-all duration-200 hover:shadow-lg hover:-translate-y-0.5" 
     draggable="true" 
     data-component-type="<%= type %>">
  <div class="flex items-center">
    <div class="w-8 h-8 bg-<%= color %>-500 rounded-lg flex items-center justify-center mr-3">
      <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
        <path d="<%= icon_path %>"/>
      </svg>
    </div>
    <div>
      <span class="text-sm font-semibold text-slate-800"><%= name %></span>
      <p class="text-xs text-slate-600"><%= description %></p>
    </div>
  </div>
</div>
